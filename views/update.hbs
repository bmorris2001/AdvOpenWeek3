
<body>
    <div id="container">
        <h1>Update your employee info.</h1>
        <nav>
            <a href="index.html">Enter Information</a>
            <a href="view.html">Look at employees</a>
        </nav>
        <form action="/updateEmpEntry" method="post">
            <span id="err" style="color: red;"></span>
            <br>
            <label for="firstName">Enter Your Employee First Name.</label>
            <br>
            <input type="text" name="firstName" id="EmpFName"value="{{firstName}}">
            <br>
            <label for="lastName">Enter Your Employee Last Name.</label>
            <br>
            <input type="text" name="lastName" id="EmpLName"value="{{lastName}}">
            <br>
            <label for="departement">Select Your Employee Departement.</label>
            <br>
            <select name="departement"><option value="Cashier">Cashier</option><option value="Tech Sales">Tech Sales<option value="Print Associate">Print Associate</option></option></select>
            <br>
            <label for="startDate">Enter Your Employee Start Date.</label>
            <br>
            <input type="date" name="startDate" id="EmpStart"value="{{startDate}}">
            <br>
            <label for="jobTitle">Enter Your Employee Job Title.</label>
            <br>
            <input type="text" name="jobTitle" id="EmpTitle"value="{{jobTitle}}">
            <br>
            <label for="salary">Enter Your Employee Salary.</label>
            <br>
            <input type="text" name="salary" id="EmpSal"value="{{salary}}">
            <br>
            <button type="submit">Update Employee</button>
        </form>
    </div>
</body>
